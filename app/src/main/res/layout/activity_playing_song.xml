<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null" />

            <Button
                android:id="@+id/playing_song_activity_library_button"
                android:text="library"
                style="@style/playing_song_activity_library_button" />

        </LinearLayout>

        <ImageView
            android:id="@+id/playing_song_album_cover"
            style="@style/playing_song_album_cover_style"
            android:src="@drawable/album_placeholder" />

        <TextView
            android:id="@+id/playing_song_name"
            style="@style/playing_song_name_style"
            android:text="Song" />

        <TextView
            android:id="@+id/playing_song_artist_name"
            style="@style/playing_song_artist_name_style"
            android:text="Artist" />

        <SeekBar style="@style/playing_song_seek_bar_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/playing_song_button_style"
                android:drawableLeft="@drawable/ic_skip_previous_black_48dp" />

            <Button
                style="@style/playing_song_button_style"
                android:layout_margin="26dp"
                android:drawableLeft="@drawable/ic_play_arrow_black_48dp" />

            <Button
                style="@style/playing_song_button_style"
                android:drawableLeft="@drawable/ic_skip_next_black_48dp" />
        </LinearLayout>

        <TextView
            style="@style/purpose_text_style"
            android:text="@string/playing_song_activity_purpose_text" />
    </LinearLayout>
</ScrollView>